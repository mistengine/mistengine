<% cache article do %>
<article>
  <%= link_to image_tag(article.minipic.url(:list), class: 'article-list-image', alt: article.title), article %>
  <h2><%= link_to article.title, article %></h2>
  <%= simple_format(article.blurb) %>
  <%= t('articles.byline', name: article.byline, date: article.created_at.to_time.strftime("%B %d, %Y")) %>
</article>
<% end %>
