<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :blurb %><br>
    <%= f.text_field :blurb %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :settings %>
    <%= f.number_field :settings %>
  </div>
  <div class="field">
    <%= f.label :type %>
    <%= f.select :type, options_for_select(Article::TYPES) %>
  </div>
  <div class="field">
    <%= f.label :published_at %><br>
    <%= f.datetime_select :published_at %>
  </div>
  <div class="field">
    <%= f.label :review_score %><br>
    <%= f.number_field :review_score %>
  </div>
  <div class="field">
    <%= f.label :sidebar %><br>
    <%= f.text_area :sidebar %>
  </div>
  <div class="field">
    <%= f.label :original_id %><br>
    <%= f.number_field :original_id %>
  </div>
  <div class="field">
    <%= f.label :byline %><br>
    <%= f.text_field :byline %>
  </div>
  <div class="field">
    <%= f.label :comment_count %><br>
    <%= f.number_field :comment_count %>
  </div>
  <div class="field">
    <%= f.label :published %><br>
    <%= f.check_box :published %>
  </div>
  <div class="field">
    <%= f.label :allow_comments %><br>
    <%= f.check_box :allow_comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
